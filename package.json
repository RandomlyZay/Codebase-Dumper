{
  "name": "codebase-dumper",
  "displayName": "Codebase Dumper",
  "description": "Dumps the current codebase into a single text file.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/RandomlyZay/Codebase-Dumper.git"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codebase-dumper.dumpCodebase",
        "title": "Dump Codebase"
      },
      {
        "command": "codebase-dumper.generateRooReview",
        "title": "Generate RooReview"
      },
      {
        "command": "codebase-dumper.rooreviewAuditor",
        "title": "RooReview Auditor"
      },
      {
        "command": "codebase-dumper.codebaseAuditor",
        "title": "Codebase Auditor"
      },
      {
        "command": "codebase-dumper.featureArchitect",
        "title": "Feature Architect"
      },
      {
        "command": "codebase-dumper.dumpDiff",
        "title": "Dump Diffs"
      }
    ],
    "submenus": [
      {
        "id": "codebaseDumper.submenu",
        "label": "Codebase Dumper"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "codebaseDumper.submenu",
          "when": "explorerResourceIsFolder",
          "group": "navigation@5"
        }
      ],
      "codebaseDumper.submenu": [
        {
          "command": "codebase-dumper.dumpCodebase",
          "group": "1_dump"
        },
        {
          "command": "codebase-dumper.dumpDiff",
          "group": "1_dump"
        },
        {
          "command": "codebase-dumper.generateRooReview",
          "group": "2_review"
        },
        {
          "command": "codebase-dumper.rooreviewAuditor",
          "group": "2_review"
        },
        {
          "command": "codebase-dumper.codebaseAuditor",
          "group": "2_review"
        },
        {
          "command": "codebase-dumper.featureArchitect",
          "group": "3_architect"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "1.102.0",
    "@types/mocha": "10.0.10",
    "@types/node": "24.1.0",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "eslint": "9.32.0",
    "typescript": "5.8.3",
    "@vscode/test-cli": "0.0.11",
    "@vscode/test-electron": "2.5.2"
  }
}